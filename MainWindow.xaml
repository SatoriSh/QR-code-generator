<Window x:Class="QR_code_generator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QR_code_generator"
        mc:Ignorable="d"
        Title="QR code generator" Height="630" Width="400"
        WindowStartupLocation="CenterScreen"
        MinHeight="630" MinWidth="400"
        Background="#e8eee7"
        Loaded="Window_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition Height="0.3*"></RowDefinition>
            <RowDefinition Height="0.5*"></RowDefinition>
            <RowDefinition Height="0.5*"></RowDefinition>
        </Grid.RowDefinitions>

        <Image x:Name="QRCodeImage" Grid.Row="0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="25 25 25 25">

        </Image>

        <TextBox x:Name="userTxt" Background="#81bece" TextChanged="userTxtChangedEvent" FontFamily="Roboto" FontSize="20" VerticalAlignment="Center"  MaxWidth="800" Grid.Row="1" Margin="10 0 10 0">Enter the text to generate the QR code</TextBox>
        <Button Background="#368ba3" FontSize="30" Content="Save" IsDefault="True" Click="SaveImageBtnClick" Grid.Row="2" Height="60" MaxWidth="800" VerticalContentAlignment="Center" HorizontalAlignment="Stretch" Margin="10 10 10 5"/>
        <Button Background="#368ba3" FontSize="30" Content="Clear" IsCancel="True" Click="ClearImageBtnClick" Grid.Row="3" Height="60" MaxWidth="800" VerticalContentAlignment="Center" HorizontalAlignment="Stretch" Margin="10 10 10 20"/>

    </Grid>
</Window>
    